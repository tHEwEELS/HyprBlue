#!/usr/bin/env bash

# Tell this script to exit if there are any errors.
# You should have this in every custom script, to ensure that your completed
# builds actually ran successfully without any errors!
set -oue pipefail

wayblue_origin_conf="/usr/etc/river/init"
river_conf="$HOME/.config/river/init"

# Replace the homedir conf if it's missing or of wayblue origin
if [ ! -f "$river_conf" || grep -q "ORIGIN: WAYBLUE" "$river_conf"]; then
    cp $wayblue_origin_conf $river_conf
fi

river
